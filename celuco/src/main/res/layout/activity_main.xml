<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#121212">

    <TextView
        android:id="@+id/heartRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperando datos de frecuencia cardíaca..."
        android:textSize="22sp"
        android:textColor="#BB86FC"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/barometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperando datos de barómetro..."
        android:textSize="22sp"
        android:textColor="#03DAC5"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/accelerometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperando datos de acelerómetro..."
        android:textSize="22sp"
        android:textColor="#CF6679"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Almacenar"
        android:textSize="18sp"
        android:textColor="#000000"
        android:backgroundTint="#BB86FC"
        android:padding="16dp"
        android:layout_gravity="center"
        android:elevation="6dp" />

</LinearLayout>
